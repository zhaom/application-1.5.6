<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xmlns:context="http://www.springframework.org/schema/context"
     xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<context:annotation-config/>
	<!-- 敏感词其他模块调用接口 -->
	<bean id="filterWordsController" class="com.babeeta.butterfly.application.words.controller.FilterWordsController" scope="singleton">
		<property name="wordsServiceImpl" ref="wordsServiceImpl"/>
	</bean>
	<!-- 敏感词后台管理 -->
	<bean id="webController" class="com.babeeta.butterfly.application.words.controller.WebController" scope="singleton">
		<property name="wordsServiceImpl" ref="wordsServiceImpl"/>
	</bean>
	<bean id="wordsServiceImpl" class="com.babeeta.butterfly.application.words.service.impl.WordsServiceImpl" scope="singleton">
        <property name="wordsDaoImpl" ref="wordsDaoImpl"/>
    </bean>
	
	<bean id="wordsDaoImpl" class="com.babeeta.butterfly.application.words.dao.impl.WordsDaoImpl" scope="singleton"/>
 </beans>
 